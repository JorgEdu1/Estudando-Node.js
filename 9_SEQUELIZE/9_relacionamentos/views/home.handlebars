<h1>Usu√°rios Cadastrados:</h1>
<div class="container">
    {{#each users}}
        <div class="item">
            <h2>{{this.name}}</h2>
            <div class=".actions">
                <form action="/users/{{this.id}}" method="GET">
                    <input type="submit" value="Ver" class="details-btn">
                </form>
                <form action="/users/delete/{{this.id}}" method="POST">
                    <input type="submit" value="Excluir" class="delete-btn">
                </form>
                <form action="/users/edit/{{this.id}}" method="GET">
                    <input type="submit" value="Editar" class="edit-btn">
                </form>
            </div>
        </div>
    {{/each}}
</div>
